# === Timezone ===
TZ=America/Lima

# === Domain and email for future TLS setup ===
LETSENCRYPT_EMAIL=admin@example.com
LETSENCRYPT_DOMAIN=wp.example.com

# === MariaDB / WordPress ===
MYSQL_ROOT_PASSWORD=change-me-root
MYSQL_DATABASE=wordpress
MYSQL_USER=wpuser
MYSQL_PASSWORD=change-me-user
MYSQL_HOST=db
WP_TABLE_PREFIX=wp_
WP_DEBUG=false

# === WordPress Admin Configuration ===
WP_ADMIN_USER=1234
WP_ADMIN_PASSWORD=1234
WP_ADMIN_EMAIL=1234@1234.org
WP_SITE_TITLE="Test Blog"

# === Compose profiles ===
# CORE: Essential services (db + wordpress)
# OPS: Operational services (prep + restore + backup)
PROFILES=core,ops

# === Backups (Borg) ===
BORG_REPO=/backup/repos/backup-repo
BORG_PASSPHRASE=change-me-pass
BACKUP_CRON="0 2 * * *"
BACKUP_RETENTION_DAILY=7
BACKUP_RETENTION_WEEKLY=4
BACKUP_RETENTION_MONTHLY=6
BACKUP_SOURCE_PATH=/var/www/html

# === Optional variables ===
# WORDPRESS_SITEURL=https://wp.example.com
# WORDPRESS_HOME=https://wp.example.com
# NGINX_WORKER_PROCESSES=auto
# CERTBOT_STAGING=true