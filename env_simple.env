# === Timezone ===
TZ=America/Lima

# === Domain and email for future TLS setup ===
LETSENCRYPT_EMAIL=admin@example.com
LETSENCRYPT_DOMAIN=wp.example.com

# === MariaDB / WordPress ===
MYSQL_ROOT_PASSWORD=change-me-root
MYSQL_DATABASE=wordpress
MYSQL_USER=wpuser
MYSQL_PASSWORD=change-me-user
MYSQL_HOST=db
WP_TABLE_PREFIX=wp_
WP_DEBUG=false

# === Seed (DB bootstrap) ===
SEED_MODE=auto
SEED_FILE=seed.sql
SEED_GZIP=false
WAIT_TIMEOUT=120
VERBOSE=false

# === Compose profiles ===
PROFILES=core,ops

# === Backups (Borg) ===
BORG_REPO=/backups/repo
BORG_PASSPHRASE=change-me-pass
BACKUP_CRON="0 2 * * *"

# === Optional variables ===
# WORDPRESS_SITEURL=https://wp.example.com
# WORDPRESS_HOME=https://wp.example.com
# NGINX_WORKER_PROCESSES=auto
# CERTBOT_STAGING=true